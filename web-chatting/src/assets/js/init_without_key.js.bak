/* 엔진 로드 후 실행할 초기화 함수(Module.postRun) */
function init() {

	/* 	브이월드 서비스 활용을 위해 브이월드 API Key를 등록합니다.
		지도를 초기화 하는 Module.Start API 실행 전 설정합니다.
	*/
	var vworldKey = "";
	if (vworldKey.length == 0) {
		Module.SetAPIKey("-");
	} else {
		Module.SetAPIKey(vworldKey);
	}

	// 환경을 초기화 후 엔진을 구동합니다.
    // Module.Start(window.innerWidth, window.innerHeight);
	console.log(window.innerWidth, window.innerWidth/12);
	let deltax = window.innerWidth / 12;
	let deltay = window.innerHeight / 12;
    Module.Start(deltax * 12, deltay * 10);

	
	// 브이월드 API를 사용하지 않을 경우 임시로 구글 영상 이미지를 로드합니다.
	Module.SetPlanetImageryType(11);

	window.onresize = function() {
		let deltax = window.innerWidth / 12;
		let deltay = window.innerHeight / 12;

		Module.Resize(window.innerWidth, deltay * 10);
		Module.XDRenderData();
	};

	 
      
	// let falseLayerList = new Module.JSLayerList(false);
	// let wmsLayer = falseLayerList.createWMSLayer('layername');
	// wmsLayer.setProxyRequest(false);
	// wmsLayer.clearWMSCache();
	// wmsLayer.setConnectionWMS('http://localhost', 28080, 'geoserver/SDT/wms');
	// wmsLayer.setLevelWMS(5,15);
	// wmsLayer.setLayersWMS('layername');
	// console.log(wmsLayer);
}

/*********************************************************
 * 엔진 파일을 로드합니다.
 * 파일은 asm.js파일, html.mem파일, js 파일 순으로 적용합니다.
 *********************************************************/

 ;(function(){

    var tm = (new Date()).getTime();	// 캐싱 방지
    
	// 1. XDWorldEM.asm.js 파일 로드
	var file = "./assets/js/engine/XDWorldEM.asm.js?tm="+tm;
	var xhr = new XMLHttpRequest();
	xhr.open('GET', file, true);
	xhr.onload = function() {

		var script = document.createElement('script');
		script.innerHTML = xhr.responseText;
		document.body.appendChild(script);

		// 2. XDWorldEM.html.mem 파일 로드
		setTimeout(function() {
			(function() {

				var memoryInitializer = "./assets/js/engine/XDWorldEM.html.mem?tm="+tm;
				var xhr = Module['memoryInitializerRequest'] = new XMLHttpRequest();
				xhr.open('GET', memoryInitializer, true);
				xhr.responseType = 'arraybuffer';
				xhr.onload =  function(){

					// 3. XDWorldEM.js 파일 로드
					var url = "./assets/js/engine/XDWorldEM.js?tm="+tm;
					var xhr = new XMLHttpRequest();
					xhr.open('GET',url , true);
					xhr.onload = function(){
						var script = document.createElement('script');
						script.innerHTML = xhr.responseText;
						document.body.appendChild(script);
					};
					xhr.send(null);
				}
				xhr.send(null);
			})();
		}, 1);
	};
	xhr.send(null);

})();


/*********************************************************
 *	엔진파일 로드 후 Module 객체가 생성되며,
 *  Module 객체를 통해 API 클래스에 접근 할 수 있습니다.
 *	 - Module.postRun : 엔진파일 로드 후 실행할 함수를 연결합니다.
 *	 - Module.canvas : 지도를 표시할 canvas 엘리먼트를 연결합니다.
 *********************************************************/

var Module = {
	TOTAL_MEMORY: 256*1024*1024,
	postRun: [init],
	canvas: (function() {

		// Canvas 엘리먼트 생성
		var canvas = document.createElement('canvas');

		// Canvas id, Width, height 설정
		canvas.id = "canvas";
		canvas.width="calc(100%)";
		canvas.height="100%";

		// Canvas 스타일 설정
		// canvas.style.position = "fixed";
		canvas.style.top = "0px";
		canvas.style.left = "0px";

		canvas.addEventListener("contextmenu", function(e){
			e.preventDefault();
		});

		// 생성한 Canvas 엘리먼트를 body에 추가합니다.
		document.querySelector('#map').appendChild(canvas);
		// document.body.appendChild(canvas);

		return canvas;
	})()
};
